<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= title %>
    </title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <style>
        body {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
        }

        .container {
            background: white;
            border-radius: 15px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
            padding: 30px;
            margin-top: 30px;
            margin-bottom: 30px;
        }

        .btn-primary {
            background: linear-gradient(45deg, #667eea, #764ba2);
            border: none;
            border-radius: 25px;
            padding: 10px 25px;
        }

        .btn-primary:hover {
            background: linear-gradient(45deg, #5a6fd8, #6a4190);
        }

        .table {
            border-radius: 10px;
            overflow: hidden;
        }

        .table thead {
            background: linear-gradient(45deg, #667eea, #764ba2);
            color: white;
        }

        .btn-sm {
            border-radius: 20px;
        }

        .card {
            border: none;
            border-radius: 15px;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
        }

        .capacity-badge {
            font-size: 0.8em;
        }
    </style>
</head>

<body>
    <div class="container">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <h1 class="mb-0"><i class="fas fa-building text-primary me-2"></i>
                    <%= title %>
                </h1>
                <p class="text-muted mb-0">Gestión de áreas y laboratorios</p>
            </div>
            <a href="/areas/crear" class="btn btn-primary">
                <i class="fas fa-plus me-2"></i>Agregar Área
            </a>
        </div>

        <div class="card">
            <div class="card-body">
                <% if (laboratorios && laboratorios.length> 0) { %>
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead>
                                <tr>
                                    <th><i class="fas fa-hashtag me-1"></i>ID</th>
                                    <th><i class="fas fa-flask me-1"></i>Nombre</th>
                                    <th><i class="fas fa-map-marker-alt me-1"></i>Ubicación</th>
                                    <th><i class="fas fa-users me-1"></i>Capacidad</th>
                                    <th><i class="fas fa-cogs me-1"></i>Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% laboratorios.forEach(function(laboratorio) { %>
                                    <tr>
                                        <td>
                                            <%= laboratorio.id %>
                                        </td>
                                        <td>
                                            <strong>
                                                <%= laboratorio.nombre %>
                                            </strong>
                                        </td>
                                        <td>
                                            <%= laboratorio.ubicacion || 'Sin asignar' %>
                                        </td>
                                        <td>
                                            <span class="badge bg-success capacity-badge">
                                                <i class="fas fa-users me-1"></i>
                                                <%= laboratorio.capacidad_personas %> personas
                                            </span>
                                        </td>
                                        <td>
                                            <a href="/areas/<%= laboratorio.id %>/editar"
                                                class="btn btn-warning btn-sm me-1">
                                                <i class="fas fa-edit"></i> Editar
                                            </a>
                                            <button class="btn btn-danger btn-sm" data-id="<%= laboratorio.id %>"
                                                data-nombre="<%= laboratorio.nombre %>">
                                                <i class="fas fa-trash"></i> Eliminar
                                            </button>
                                        </td>
                                    </tr>
                                    <% }); %>
                            </tbody>
                        </table>
                    </div>
                    <% } else { %>
                        <div class="text-center py-5">
                            <i class="fas fa-flask fa-4x text-muted mb-3"></i>
                            <h4 class="text-muted">No hay laboratorios registrados</h4>
                            <p class="text-muted">Comienza agregando tu primera área de laboratorio.</p>
                            <a href="/areas/crear" class="btn btn-primary">
                                <i class="fas fa-plus me-2"></i>Agregar Primer Laboratorio
                            </a>
                        </div>
                        <% } %>
            </div>
        </div>

        <div class="mt-4">
            <a href="/" class="btn btn-outline-secondary">
                <i class="fas fa-home me-2"></i>Volver al Inicio
            </a>
        </div>
    </div>

    <!-- Modal de Confirmación de Eliminación -->
    <div class="modal fade" id="eliminarModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">
                        <i class="fas fa-exclamation-triangle text-warning me-2"></i>Confirmar Eliminación
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <p>¿Estás seguro de que deseas eliminar el laboratorio <strong id="laboratorioNombre"></strong>?</p>
                    <p class="text-danger small">Esta acción no se puede deshacer y puede afectar las pruebas
                        programadas.</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button type="button" class="btn btn-danger" id="confirmarEliminar">
                        <i class="fas fa-trash me-1"></i>Eliminar
                    </button>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Agregar event listeners a todos los botones de eliminar
        document.addEventListener('DOMContentLoaded', function () {
            const eliminarButtons = document.querySelectorAll('.btn-danger[data-id]');
            eliminarButtons.forEach(button => {
                button.addEventListener('click', function () {
                    const id = this.getAttribute('data-id');
                    const nombre = this.getAttribute('data-nombre');
                    eliminarLaboratorio(id, nombre);
                });
            });
        });

        let laboratorioIdAEliminar = null;

        function eliminarLaboratorio(id, nombre) {
            laboratorioIdAEliminar = id;
            document.getElementById('laboratorioNombre').textContent = nombre;
            new bootstrap.Modal(document.getElementById('eliminarModal')).show();
        }

        document.getElementById('confirmarEliminar').addEventListener('click', async function () {
            if (!laboratorioIdAEliminar) return;

            try {
                const response = await fetch(`/areas/${laboratorioIdAEliminar}`, {
                    method: 'DELETE',
                    headers: {
                        'Content-Type': 'application/json'
                    }
                });

                if (response.ok) {
                    location.reload();
                } else {
                    // Si redirecciona, response.ok puede ser true si sigue el redirect.
                    // Si es HTML, reload es ok.
                    location.reload();
                }
            } catch (error) {
                console.error('Error:', error);
                alert('Error al eliminar el laboratorio');
            }

            bootstrap.Modal.getInstance(document.getElementById('eliminarModal')).hide();
        });
    </script>
</body>

</html>